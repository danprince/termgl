{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noEmit": true
  },
  "include": [
    "terminal",
    "color"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "excludeNotExported": true,
    "inputFiles": [
      "terminal/index.js",
      "color/index.js"
    ]
  }
}
