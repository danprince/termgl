  },
  "files": [
    "terminal",
    "dist"
  ],
  "devDependencies": {
    "rollup": "^2.2.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-terser": "^5.3.0",
    "typedoc": "^0.17.3",
    "typedoc-plugin-external-module-name": "^3.0.0",
    "typescript": "^3.8.3"
  }
