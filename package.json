{
  "name": "termgl",
  "version": "0.0.0",
  "author": "Dan Prince",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danprince/termgl.git"
  },
  "description": "WebGL terminal emulator",
  "source": "terminal/index.js",
  "main": "dist/terminal.js",
  "types": "dist/types/terminal/index.d.ts",
  "scripts": {
